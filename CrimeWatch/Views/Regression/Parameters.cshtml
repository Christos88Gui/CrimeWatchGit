@{
    ViewBag.Title = "Prediction Parameters";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}

<button style="float:left;" class="btn btn-warning" onclick="location.href='@Url.Action("MyPortal", "Home")'">User Portal</button>

<div class="container customCont" style="margin-top:10%;">
    <h2 class="title">Predict Crimes</h2>
    <br />
    <form action="PredictCrimes/Regression" id="mapForm" onsubmit="return validateForm()">
        <div class="col-lg-4" style="color:black">
            <h4>Select Couty</h4>
            <select class="form-control centeredElement" name="countyName">
                @foreach (var county in ViewBag.countiesDD)
                {
                    <option>
                        @county
                    </option>
                }
            </select>
        </div>
        <div class="col-lg-3">
            <h4>Select date</h4>
            <select class="form-control centeredElement" name="dateStr">
                @foreach (var date in ViewBag.datesDD)
                {
                    <option>
                        @date
                    </option>
                }
            </select>
        </div>
        <div class="col-md-1">
            <button class="btn btn-default" id="submitMapParamsBtn" onclick="submitForm()">Submit</button>
        </div>
    </form>
</div>

<style>
    #submitMapParamsBtn {
        margin-top: 35px;
        margin-right: 25px;
        text-align: left;
        height: 45px;
        font-weight: bold;
    }

    body {
        margin-top: 5%
    }

    h4 {
        text-align: center;
        color: black;
        font-family: Verdana
    }
</style>

<script>
    function validateForm() {
        var address = document.getElementById("addressSearch1").value;
        if (address == "") {
            window.alert("Please type an address or postcode");
            return false;
        }
    }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_rXEE2-a_KrNsOkLH0sxMr96NVZjaiTI&libraries=places&callback=autocomplete"></script>
