<button style="float:left; margin-left:3%" class="btn btn-warning" onclick="location.href='@Url.Action("MyPortal", "Home")'">User Portal</button>
<h2 class="title">Criminality Clusters</h2>
<div style="text-align:center; margin:0 auto;width:80%">
    <br /><br />
    <h4 class="title" style="text-align:left; margin-top:3%">Cluster 1: <b>Very Low Criminality</b></h4>
    <div class="row" style="font-size:17px; background-color:lightgray; border:1px solid white">
        <div class="col-lg-4">
            <b>County name </b>
        </div>
        <div class="col-lg-4">
            <b>Crimes per 1000 residents</b>
        </div>
        <div class="col-lg-4">
            <b>Violent crimes per 1000 residents</b>
        </div>
    </div>
    @foreach (var county in Model.Where(x => x.Cluster_Id == 1))
    {
        <div class="row" style="height:30px; background-color:lightgreen; border:1px solid white">
            <div class="col-lg-4">
                @county.Name
            </div>
            <div class="col-lg-4">
                @county.Total_Crimes
            </div>
            <div class="col-lg-4">
                @county.Violent_Crimes
