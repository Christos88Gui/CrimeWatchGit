@using CrimeWatch.Models
@model List<County>
@{
    ViewBag.Title = "Clusters";
    Layout = "";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<link href="https://fonts.googleapis.com/css?family=Allerta+Stencil" rel="stylesheet">

@Styles.Render("~/Content/css")
